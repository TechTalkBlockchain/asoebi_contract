{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.27"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "max-line-length": [
            "warn",
            120
        ]
    }
}